    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.4.0/lightgallery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.4.0/plugins/zoom/lg-zoom.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.4.0/plugins/thumbnail/lg-thumbnail.min.js"></script>
    <script>
        // Initialize lightGallery
        const lgContainer = document.getElementById('lightgallery');
        if (lgContainer) {
            lightGallery(lgContainer, {
                speed: 500,
                plugins: [lgZoom, lgThumbnail],
                selector: '.gallery-item',
                download: false 
            });
        }
        
        // Back to top button
        const backToTopButton = document.getElementById('backToTop');
        if (backToTopButton) {
            window.addEventListener('scroll', () => {
                if (window.pageYOffset > 300) {
                    backToTopButton.classList.add('visible');
                } else {
                    backToTopButton.classList.remove('visible');
                }
            });
            
            backToTopButton.addEventListener('click', (e) => {
                e.preventDefault();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
        }
        
        // Print page
        const printButton = document.getElementById('printPage');
        if (printButton) {
            printButton.addEventListener('click', (e) => {
                e.preventDefault();
                window.print();
            });
        }
        
        // Share link
        const shareButton = document.getElementById('shareLink');
        if (shareButton) {
            shareButton.addEventListener('click', (e) => {
                e.preventDefault();
                const shareData = {
                    title: document.title,
                    text: 'Informationen zum geplanten Verkauf und Abriss des Spielplatzes in Lankow. Schau es dir an!',
                    url: window.location.href
                };
                if (navigator.share && navigator.canShare && navigator.canShare(shareData)) {
                    navigator.share(shareData)
                        .then(() => console.log('Erfolgreich geteilt'))
                        .catch((error) => console.log('Fehler beim Teilen:', error));
                } else {
                    navigator.clipboard.writeText(window.location.href).then(() => {
                        displayTemporaryMessage(pdfInfoMessage, 'Link in die Zwischenablage kopiert!', 'success');
                    }).catch(err => {
                        console.error('Konnte Link nicht kopieren: ', err);
                        displayTemporaryMessage(pdfInfoMessage, 'Link konnte nicht kopiert werden.', 'error');
                    });
                }
            });
        }

        function shareSocial(platform) {
            const url = encodeURIComponent(window.location.href);
            const text = encodeURIComponent("Rettet den Spielplatz Lankow! Infos hier: ");
            let shareUrl = "";

            switch(platform) {
                case 'facebook':
                    shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${url}`;
                    break;
                case 'twitter':
                    shareUrl = `https://twitter.com/intent/tweet?url=${url}&text=${text}`;
                    break;
                case 'whatsapp':
                    shareUrl = `https://api.whatsapp.com/send?text=${text}${url}`;
                    break;
                 case 'email':
                    shareUrl = `mailto:?subject=${encodeURIComponent('Infos zum Spielplatz Lankow')}&body=${text}${url}`;
                    break;
            }
            if (shareUrl) {
                window.open(shareUrl, '_blank');
            }
        }
        
        const downloadPdfButton = document.getElementById('downloadPDF');
        const pdfInfoMessage = document.getElementById('pdfInfoMessage');

        function displayTemporaryMessage(element, message, type) {
            if (element) {
                element.textContent = message;
                element.className = `form-feedback ${type}`; // Ensure class is set for styling
                element.style.display = 'block';
                setTimeout(() => {
                    element.style.display = 'none';
                }, 5000);
            }
        }

        if (downloadPdfButton && pdfInfoMessage) {
            downloadPdfButton.addEventListener('click', (e) => {
                e.preventDefault();
                displayTemporaryMessage(pdfInfoMessage, 'Hinweis: Um die Seite als PDF zu speichern, nutzen Sie bitte die Druckfunktion Ihres Browsers (Strg+P oder Cmd+P) und wählen Sie "Als PDF speichern".', 'info');
            });
        }

        // Toggle Fraktionen List
        const toggleFraktionenBtn = document.getElementById('toggleFraktionenBtn');
        const alleFraktionenContent = document.getElementById('alleFraktionenContent');

        if (toggleFraktionenBtn && alleFraktionenContent) {
            toggleFraktionenBtn.addEventListener('click', () => {
                const isHidden = alleFraktionenContent.style.display === 'none';
                if (isHidden) {
                    alleFraktionenContent.style.display = 'block';
                    toggleFraktionenBtn.innerHTML = '<i class="fas fa-users btn-icon"></i> Fraktionen ausblenden';
                } else {
                    alleFraktionenContent.style.display = 'none';
                    toggleFraktionenBtn.innerHTML = '<i class="fas fa-users btn-icon"></i> Alle Fraktionen anzeigen';
                }
            });
        }

    </script>
</body>
</html>
